---
import { getCollection } from 'astro:content';
import ContactCTA from '../components/ContactCTA.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
	title="Projects | kaixuan AI"
	description="Explore kaixuan AI's comprehensive project portfolio and professional work"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Projects"
				tagline="Explore kaixuan AI studio's comprehensive portfolio of AI-powered digital workflow solutions and innovative projects."
				align="start"
			/>
			
			<section class="project-stats">
				<div class="stats-grid">
					<div class="stat-card">
						<span class="stat-number">{projects.length}</span>
						<span class="stat-label">Total Projects</span>
					</div>
					<div class="stat-card">
						<span class="stat-number">{new Set(projects.flatMap(p => p.data.tags)).size}</span>
						<span class="stat-label">Technologies</span>
					</div>
					<div class="stat-card">
						<span class="stat-number">{Math.floor((Date.now() - new Date('2019-01-01').getTime()) / (365.25 * 24 * 60 * 60 * 1000))}</span>
						<span class="stat-label">Years Experience</span>
					</div>
				</div>
			</section>

			<section class="projects-section">
				<div class="section-header">
					<h2>Featured Projects</h2>
					<p>A showcase of kaixuan AI studio's most impactful work in AI-powered digital workflow reconstruction</p>
				</div>
				<Grid variant="offset">
					{
						projects.map((project) => (
							<li>
								<PortfolioPreview project={project} />
							</li>
						))
					}
				</Grid>
			</section>

			<section class="skills-section">
				<div class="section-header">
					<h2>Technology Stack</h2>
					<p>Technologies and tools I work with regularly</p>
				</div>
				<div class="tech-grid">
					{
						Array.from(new Set(projects.flatMap(p => p.data.tags))).map((tag) => (
							<span class="tech-tag">{tag}</span>
						))
					}
				</div>
			</section>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.project-stats {
		margin: 2rem 0;
	}

	.stats-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
		gap: 1.5rem;
		max-width: 600px;
		margin: 0 auto;
	}

	.stat-card {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		padding: 1.5rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 1rem;
		box-shadow: var(--shadow-sm);
	}

	.stat-number {
		font-size: var(--text-3xl);
		font-weight: 600;
		color: var(--accent-regular);
		line-height: 1;
	}

	.stat-label {
		font-size: var(--text-sm);
		color: var(--gray-400);
		margin-top: 0.5rem;
	}

	.projects-section {
		margin: 3rem 0;
	}

	.skills-section {
		margin: 3rem 0;
	}

	.section-header {
		text-align: center;
		margin-bottom: 2rem;
	}

	.section-header h2 {
		font-size: var(--text-2xl);
		color: var(--gray-0);
		margin-bottom: 0.5rem;
	}

	.section-header p {
		font-size: var(--text-md);
		color: var(--gray-300);
		max-width: 50ch;
		margin: 0 auto;
	}

	.tech-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		justify-content: center;
		max-width: 800px;
		margin: 0 auto;
	}

	.tech-tag {
		display: inline-block;
		padding: 0.5rem 1rem;
		background: linear-gradient(145deg, var(--accent-subtle-overlay), var(--accent-overlay));
		color: var(--gray-0);
		border-radius: 2rem;
		font-size: var(--text-sm);
		font-weight: 500;
		border: 1px solid var(--accent-dark);
		transition: all var(--theme-transition);
	}

	.tech-tag:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
		background: linear-gradient(145deg, var(--accent-regular), var(--accent-light));
	}

	@media (min-width: 50em) {
		.stats-grid {
			max-width: 800px;
		}

		.stat-card {
			padding: 2rem;
			border-radius: 1.5rem;
		}

		.stat-number {
			font-size: var(--text-4xl);
		}

		.stat-label {
			font-size: var(--text-base);
		}

		.section-header h2 {
			font-size: var(--text-3xl);
		}

		.section-header p {
			font-size: var(--text-lg);
		}
	}
</style>
